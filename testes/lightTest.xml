			<translate X="multX*spcX"/>
			<set tgt="multX" exp="multX+1" />
			<!-- <rotate angle="-90" axisX="1"/> -->
			<scale X="20" Y="20" Z="20" />
			
			<models>
				<model file="sphereUV.3d" emsvR="0" emsvG="1" emsvB="1" emsvA="1" texture="uvCheckerC.png"/>
			</models>
		</group>

</group>

