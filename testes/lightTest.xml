			<translate X="multX*spcX"/>
			<set tgt="multX" exp="multX+1" />
			<!-- <rotate angle="-90" axisX="1"/> -->
			<scale X="20" Y="20" Z="20" />
			
			<models>
				<model file="coneUV.3d"  />
			</models>
		</group>

		<group>
			<translate X="multX*spcX"/>
			<set tgt="multX" exp="multX+1" />
			<!-- <rotate angle="-90" axisX="1"/> -->
			<scale X="20" Y="20" Z="20" />
			
			<models>
