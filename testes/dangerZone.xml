<scene>
	<settings>
		<camera>
			<center X="0" Y="0" Z="0"/>
			<position A="0" B="0" R="50"/>
		</camera>
		<background R="0.2" G="0.3" B="0.6" A="0.4"/>
	</settings>
	
	<set tgt="pos" exp="1000"/>
	<set tgt="radius" exp="30"/>
	<!-- radius = 30 -->
	<pi tgt="rat"/>
	<set tgt="rat" exp="(2*rat)/pos" />
	<set tgt="clrrat" exp="1/pos" />

	<while exp="pos > 0">		
		<set tgt="alfa" exp="rat*pos" />
		<cos tgt="x" exp="alfa" />
		<sin tgt="z" exp="alfa" />
		<set tgt="x" exp="radius*x" />
		<set tgt="z" exp="radius*z" />
		<group>
			<translate X="x" Z="z"/>
			<scale X="0.1" Z="0.1" Y="0.1"/>
			<models>
				<model file="sphere.3d" R="clrrat*pos" G="clrrat*pos" B="clrrat*pos"/>
			</models>
		</group>
		<set tgt="pos" exp="pos-1"/>
	</while>
</scene>